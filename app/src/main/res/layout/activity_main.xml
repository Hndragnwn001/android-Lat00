<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="First"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Second"
        app:layout_constraintEnd_toEndOf="@+id/btfirst"
        app:layout_constraintTop_toBottomOf="@+id/btfirst"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Third"
        app:layout_constraintEnd_toEndOf="@+id/btSecond"
        app:layout_constraintTop_toBottomOf="@+id/btSecond"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Fourth"
        app:layout_constraintBottom_toBottomOf="@+id/btThird"
        app:layout_constraintStart_toEndOf="@+id/btThird"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>